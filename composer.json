{
    "name": "yakimun/json-schema-validator",
    "description": "The JSON Schema validator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Yakimov",
            "email": "yakimun@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "guzzlehttp/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.15.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": { "Yakimun\\JsonSchemaValidator\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Yakimun\\JsonSchemaValidator\\Tests\\": "tests/" }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    }
}
