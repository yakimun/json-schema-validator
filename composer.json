{
    "name": "yakimun/json-schema-validator",
    "description": "The JSON Schema validator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Yakimov",
            "email": "yakimun@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/psr7": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.11"
    },
    "autoload": {
        "psr-4": { "Yakimun\\JsonSchemaValidator\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Yakimun\\JsonSchemaValidator\\Tests\\": "tests/" }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan",
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    }
}
