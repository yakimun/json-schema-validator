{
    "name": "yakimun/json-schema-validator",
    "description": "The JSON Schema validator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Yakimov",
            "email": "yakimun@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0 || ^8.1",
        "ext-json": "*",
        "guzzlehttp/psr7": "^2.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18.1",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Yakimun\\JsonSchemaValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yakimun\\JsonSchemaValidator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan",
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
